{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "bash": {
            "*": "allow",
            "* dev": "deny",
            "sudo *": "deny"
        }
    },
    "agent": {
        "build": {
            "model": "github-copilot/claude-sonnet-4.5"
        },
        "plan": {
            "model": "github-copilot/gpt-5-mini"
        },
        "general": {
            "model": "opencode/big-pickle"
        }
    },
    "mcp": {
        "context7": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@upstash/context7-mcp"
            ],
            "enabled": true
        },
        "gh_grep": {
            "type": "remote",
            "url": "https://mcp.grep.app/"
        },
    },
    "theme": "one-dark",
    "keybinds": {
        "input_newline": "alt+enter"
    },
    "lsp": {
        "python": {
            "disabled": true
        }
    }
}
